    "version": "0.2.0",
    "configurations": [
        {
            "name": "play",
            "type": "python",
            "request": "launch",
            "program": "./legged_gym/scripts/play.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--task=BITeno_roboterax", //set task name
                "--load_run=Nov02_17-58-24", //set policy to load
                //NOTE: please set the checkpint according to the policy you want to load
                "--num_envs=50", //set number of environments
            ]
        },
        {
            "name": "train",
            "type": "python",
            "request": "launch",
            "program": "./legged_gym/scripts/train.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--task=BITeno_roboterax", //set task name
                //"--launch_tensorboard",
                //"--headless" //uncomment to run without rendering
                "--load_run=Nov02_10-05-20", //set pre-trained policy to load
                "--resume", //set if resume training
                "--max_iterations=20000",
                //"--num_envs=1"
                //NOTE: for more options, please refer to the get_args() funtion in legged_gym/utils/helper.py
            ],
        },
        {
            // launch current file
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}